<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_input_edit_text">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:background">@drawable/underline_text_input_layout_grey</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:layout_marginTop">@dimen/padding_8</item>
    </style>


    <style name="button_style">
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>